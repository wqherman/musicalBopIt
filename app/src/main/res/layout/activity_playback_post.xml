<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="html.eduwhermanhome.stanford.httpsccrma.musicalbopit.PlaybackPost"
    android:background="#000000">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Playback!"
        android:textColor="#c5f1e812"
        android:background="#c505b4f1"
        android:id="@+id/playback"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/playback"
        android:layout_marginTop="70dp"
        android:background="#c5ffffff"
        android:text="Enter User Name"
        android:textColor="#a33d05ee"
        android:textSize="@dimen/abc_text_size_large_material"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trackname"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#c5ffffff"
        android:text="Enter Track Name"
        android:textColor="#a33d05ee"
        android:textSize="@dimen/abc_text_size_large_material"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="PostNew!"
        android:textColor="#c5f1e812"
        android:background="#c505b4f1"
        android:id="@+id/post"
        android:layout_below="@+id/trackname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Add to Downloaded Track"
        android:textColor="#c5f1e812"
        android:background="#c505b4f1"
        android:id="@+id/addto"
        android:layout_below="@+id/post"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
